= form_with(model: song, local: true) do |form|
  - if song.errors.any?
    #error_explanation
      %h2
        = pluralize(song.errors.count, "error")
        prohibited this song from being saved:
      %ul
        - song.errors.full_messages.each do |message|
          %li= message
  = label_tag do
    PERFORMER
    \#{form.text_field :performer}
  = label_tag do
    CATEGORY
    \#{form.text_field :category}
  = label_tag do
    URL
    \#{form.text_field :url}
  - unless index_page
    = label_tag do
      SKIPPED
      \#{form.check_box :skipped}
  - unless index_page
    = label_tag do
      FINISHED
      \#{form.check_box :finished}
  .actions
    = form.submit
