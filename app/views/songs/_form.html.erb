<%= form_with(model: song, local: true) do |form| %>

  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>
      <ul>
        <% song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= label_tag do %>
    PERFORMER
    <%= form.text_field :performer %>
  <% end %>

  <%= label_tag do %>
    CATEGORY
    <%= form.text_field :category %>
  <% end %>

  <%= label_tag do %>
    URL
    <%= form.text_field :url %>
  <% end %>

  <% unless index_page %>
    <%= label_tag do %>
      SKIPPED
      <%= form.check_box :skipped %>
    <% end %>
  <% end %>

  <% unless index_page %>
    <%= label_tag do %>
      FINISHED
      <%= form.check_box :finished %>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>